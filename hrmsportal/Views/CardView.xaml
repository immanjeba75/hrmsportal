<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="hrmsportal.Views.CardView">
    <VerticalStackLayout BackgroundColor="AntiqueWhite">
        <Frame BorderColor="{Binding BorderColor}" Margin="10" BackgroundColor="Aquamarine">
            <StackLayout BackgroundColor="AntiqueWhite">
                <Image Source="{Binding IconImageSource}" BackgroundColor="Red" />
                <Label Text="{Binding CardTitle}" TextColor="{Binding TextColor}" />
                <Label Text="{Binding CardDescription}" TextColor="{Binding TextColor}" />
            </StackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentView>
